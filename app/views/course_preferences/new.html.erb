<% if params[:course_session] == "session1" %>
  <%= form_with(model: @course_preference, local: true) do |cp_form| %>
    <%= cp_form.collection_select(:course_id, @courses_session1, :id, :title) %>
    <%= cp_form.select :ranking, ((1..10).map {|i| [i,i] }), include_blank: true %>
    <%= cp_form.submit "Update Course Preferences - Session 1" %>
   <% end %>
