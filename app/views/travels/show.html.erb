<div class="rounded-lg overflow-hidden shadow-lg">
  <h1 class="text-yellow-um_yellow bg-blue-um_blue p-2 m-4">
    <p class="text-center text-lg"><%= @current_enrollment.applicant_detail.firstname %><%= @current_enrollment.applicant_detail.middlename %> <%= @current_enrollment.applicant_detail.lastname %></p>
  </h1>
  <div class="pp-4 my-2 text-gray-700">
    <div class="flex flex-row justify-between">
      <div class="pl-4">
        <label class="flex text-sm font-medium text-gray-900 sm:mt-0">
          Session of Arrival
        </label>
        <span class="text-sm text-gray-700 flex-grow border-2 border-gray-400 p-2">
          <%= @travel.arrival_session %>
        </span>
      </div>

      <div class="pr-4">
        <label class="flex text-sm font-medium text-gray-900 sm:mt-0">
          Session of Departure
        </label>
        <div class="text-sm text-gray-700 flex-grow border-2 border-gray-400 p-2">
          <%= @travel.depart_session %>
        </div>
      </div>
    </div>
    <div class="p-4 my-2">
      <h2 class="font-medium text-xl">Arrival Information</h2>

      <div class="py-2">
        <label class="flex text-sm font-medium text-gray-900 sm:mt-0 p-1">
          What type of transportation you will use to arrive to Michigan
        </label>
        <div class="ml-2 text-sm text-gray-700 flex-grow border-2 border-gray-400 p-2">
          <%= @travel.arrival_transport %>
        </div>
      </div>

      <div class="py-2">
        <label class="flex text-sm font-medium text-gray-900 sm:mt-0 p-1">
          Carrier Name: Airline (Delta, United, Spirit, etc.), Bus (Greyhound), Train (Amtrak)
        </label>
        <div class="ml-2 text-sm text-gray-700 flex-grow border-2 border-gray-400 p-2">
          <%= @travel.arrival_carrier %>
        </div>
      </div>

      <div class="py-2">
        <label class="flex text-sm font-medium text-gray-900 sm:mt-0 p-1">
          Arrival Flight #/Bus #/Train # (Ex: Delta 0025)
        </label>
        <div class="ml-2 text-sm text-gray-700 flex-grow border-2 border-gray-400 p-2">
          <%= @travel.arrival_route_num %>
        </div>
      </div>

      <div class="">
        <label class="flex text-sm font-medium text-gray-900 sm:mt-0 p-1">
          Date of arrival
        </label>
        <div class="ml-2 text-sm text-gray-700 flex-grow border-2 border-gray-400 p-2">
          <%= show_date(@travel.arrival_date) %>
        </div>
      </div>

      <div class="py-2">
        <label class="flex text-sm font-medium text-gray-900 sm:mt-0 p-1">
        Time of arrival
        </label>
        <div class="ml-2 text-sm text-gray-700 flex-grow border-2 border-gray-400 p-2">
          <%= show_time(@travel.arrival_time) %>
        </div>
      </div>
    </div>
    
    <div class="p-4 my-2">
      <h2 class="font-medium text-xl">Departure Information</h2>

      <div class="py-2">
        <label class="flex text-sm font-medium text-gray-900 sm:mt-0 p-1">
          Please indicate what type of transportation you will use to depart from Michigan
        </label>
        <div class="ml-2 text-sm text-gray-700 flex-grow border-2 border-gray-400 p-2">
          <%= @travel.depart_transport %>
        </div>
      </div>

      <div class="py-2">
        <label class="flex text-sm font-medium text-gray-900 sm:mt-0 p-1">
          Carrier Name 
        </label>
        <div class="ml-2 text-sm text-gray-700 flex-grow border-2 border-gray-400 p-2">
          <%= @travel.depart_carrier %>
        </div>
      </div>

      <div class="py-2">
        <label class="flex text-sm font-medium text-gray-900 sm:mt-0 p-1">
          Departure Flight #/Bus #/Train # (Ex: Delta 0025)
        </label>
        <div class="ml-2 text-sm text-gray-700 flex-grow border-2 border-gray-400 p-2">
          <%= @travel.depart_route_num %>
        </div>
      </div>

      <div class="py-2">
        <label class="flex text-sm font-medium text-gray-900 sm:mt-0 p-1">
          Date of departure
        </label>
        <div class="ml-2 text-sm text-gray-700 flex-grow border-2 border-gray-400 p-2">
          <%= show_date(@travel.depart_date) %>
        </div>
      </div>

      <div class="py-2">
        <label class="flex text-sm font-medium text-gray-900 sm:mt-0 p-1">
          Time of departure
        </label>
        <div class="ml-2 text-sm text-gray-700 flex-grow border-2 border-gray-400 p-2">
          <%= show_time(@travel.depart_time) %>
        </div>
      </div>
    </div>
    <div class="p-4 my-2">
      <h2 class="font-medium text-xl">Additional notes</h2>
      <div class="ml-2 text-sm text-gray-700 flex-grow border-2 border-gray-400 p-2">
        <%= @travel.note %>
      </div>
    </div>

  </div>
  <div class="m-2">
    <%= link_to 'Edit', edit_enrollment_travel_path(@current_enrollment, @travel), class: "hover:underline" %> |
    <%= link_to 'Back', root_path, class: "hover:underline" %>
  </div>
</div>
