<p id="notice"><%= notice %></p>

<h1>Recommendations</h1>

<table>
  <thead>
    <tr>
      <th>Enrollment</th>
      <th>Email</th>
      <th>Lastname</th>
      <th>Firstname</th>
      <th>Organization</th>
      <th>Address1</th>
      <th>Address2</th>
      <th>City</th>
      <th>State</th>
      <th>State non us</th>
      <th>Postalcode</th>
      <th>Country</th>
      <th>Phone number</th>
      <th>Best contact time</th>
      <th>Submitted recommendation</th>
      <th>Date submitted</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recommendations.each do |recommendation| %>
      <tr>
        <td><%= recommendation.enrollment_id %></td>
        <td><%= recommendation.email %></td>
        <td><%= recommendation.lastname %></td>
        <td><%= recommendation.firstname %></td>
        <td><%= recommendation.organization %></td>
        <td><%= recommendation.address1 %></td>
        <td><%= recommendation.address2 %></td>
        <td><%= recommendation.city %></td>
        <td><%= recommendation.state %></td>
        <td><%= recommendation.state_non_us %></td>
        <td><%= recommendation.postalcode %></td>
        <td><%= recommendation.country %></td>
        <td><%= recommendation.phone_number %></td>
        <td><%= recommendation.best_contact_time %></td>
        <td><%= recommendation.submitted_recommendation %></td>
        <td><%= recommendation.date_submitted %></td>
        <td><%= link_to 'Show', recommendation %></td>
        <td><%= link_to 'Edit', edit_recommendation_path(recommendation) %></td>
        <td><%= link_to 'Destroy', recommendation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recommendation', new_recommendation_path %>
