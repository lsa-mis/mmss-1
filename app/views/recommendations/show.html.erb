<div class="max-w-sm rounded overflow-hidden shadow-lg">
  <div class="text-yellow-um_yellow bg-blue-um_blue p-2">
    <p class="text-center text-lg">Letter of Recommendation</p>
  </div>
  <div class="px-6 py-4">
    <p class="text-gray-700">
      <ul class="pl-4">
        <li class="text-base"><%= @recommendation.firstname %> <%= @recommendation.lastname %></li>
        <li>eMail: <%= @recommendation.email %></li>

        <li>Organization: 
          <ul class="pl-2">
            <li><%= @recommendation.organization %></li>
            <li><%= @recommendation.address1 %></li>
            <li><%= @recommendation.address2 %></li>
            <li><%= @recommendation.city %> <%= @recommendation.state %> <%= @recommendation.state_non_us %> <%= @recommendation.postalcode %></li>
            <li><%= @recommendation.country %></li>
            <li><%= @recommendation.phone_number %></li>
            <li><%= @recommendation.best_contact_time %></li>
          </ul>
        </li>
      </ul>
    <p>

    <div class="inline-block bg-gray-100 rounded-lg px-3 py-1 text-sm text-gray-700 mr-2 mb-2">
      Letter status:
        <% if @current_enrollment.recommendation.recupload.present? %>
          <br>
          <span class="text-green-800 pl-2">Received on <%= @current_enrollment.recommendation.recupload.created_at.strftime("%b %d, %Y") %></span>
        <% else %>
          requested
        <% end %>
    </div>
  </div>
</div>
<% if admin_signed_in? %>
<h2>========== Administrative area ==========</h2>
  <p>
    <strong>Enrollment:</strong>
    <%= @recommendation.enrollment_id %>
  </p>
<% end %>

<div class="mt-2">
  <% if @current_enrollment.recommendation.recupload.blank? %>
    <%= link_to 'Edit', edit_recommendation_path(@recommendation), class: "btn btn-blue" %> |
  <% end %>
  <%= link_to 'Home', root_path, class: "btn btn-blue" %>
</div>
