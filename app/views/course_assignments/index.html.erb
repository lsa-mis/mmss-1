<p id="notice"><%= notice %></p>

<h1>Course Assignments</h1>

<table>
  <thead>
    <tr>
      <th>Enrollment</th>
      <th>Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @course_assignments.each do |course_assignment| %>
      <tr>
        <td><%= course_assignment.enrollment_id %></td>
        <td><%= course_assignment.course_id %></td>
        <td><%= link_to 'Show', course_assignment %></td>
        <td><%= link_to 'Edit', edit_course_assignment_path(course_assignment) %></td>
        <td><%= link_to 'Destroy', course_assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

