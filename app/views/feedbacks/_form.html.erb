<%= form_with(model: feedback, local: true, data: { controller: "required-stars" }) do |form| %>
  <% if feedback.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(feedback.errors.count, "error") %> prohibited this feedback from being saved:</h2>
      <ul>
        <% feedback.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :genre %>
    <%= form.select :genre, ([["Error on Page","page_error"],["Layout Issue","layout_issue"],["Suggestion","suggestion"]]), include_blank: true, required: true %>
  </div>

  <div class="field">
    <%= form.label :message %>
    <%= form.text_area :message, size: "24x6" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>