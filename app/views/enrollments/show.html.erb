<%= link_to 'Back', enrollments_path %>

<div class="bg-blue-200 border border-blue-500 ">
<h2>Activities connected to this enrollment</h2>
<% @activities.each do |activity| %>
  <li>
    <%= " #{ activity.description } ( #{activity.camp_occurrence.camp_configuration.camp_year } #{ activity.camp_occurrence.description } ) --  #{ humanized_money_with_symbol(activity.cost) }" %>
  </li>
<% end %>
<%= link_to "Add an Activity", root_path %>
</div>



