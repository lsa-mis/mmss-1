

<p>
  <small>User_id:
  <%= @enrollment.user_id %>
  </small>
</p>

<p>
  <strong>User:</strong>
  <%= @enrollment.applicant_detail.full_name %>
</p>

<p>
  <strong>International:</strong>
  <%= @enrollment.international %>
</p>

<p>
  <strong>High school name:</strong>
  <%= @enrollment.high_school_name %>
</p>

<p>
  <strong>High school address1:</strong>
  <%= @enrollment.high_school_address1 %>
</p>

<p>
  <strong>High school address2:</strong>
  <%= @enrollment.high_school_address2 %>
</p>

<p>
  <strong>High school city:</strong>
  <%= @enrollment.high_school_city %>
</p>

<p>
  <strong>High school state:</strong>
  <%= @enrollment.high_school_state %>
</p>

<p>
  <strong>High school non us:</strong>
  <%= @enrollment.high_school_non_us %>
</p>

<p>
  <strong>High school postalcode:</strong>
  <%= @enrollment.high_school_postalcode %>
</p>

<p>
  <strong>High school country:</strong>
  <%= @enrollment.high_school_country %>
</p>

<p>
  <strong>Year in school:</strong>
  <%= @enrollment.year_in_school %>
</p>

<p>
  <strong>Anticipated graduation year:</strong>
  <%= @enrollment.anticipated_graduation_year %>
</p>

<p>
  <strong>Room mate request:</strong>
  <%= @enrollment.room_mate_request %>
</p>

<p>
  <strong>Personal statement:</strong>
  <%= @enrollment.personal_statement %>
</p>

<% if @enrollment.transcript.attached? %>
  <p>
    <strong>Transcript:</strong> <%= link_to @enrollment.transcript.filename, url_for(@enrollment.transcript) %>
  </p>
<% else %>
<p class="text-lg text-orange-500">
  Use the <%= link_to 'Edit', edit_enrollment_path(@enrollment) %> button to add a transcript!
</p>
<% end %>

<div class="bg-blue-200 border border-blue-500 ">
    <% if @registration_activities.present? %>
    <h4>Activities</h4>
      <ul>
        <% @registration_activities.each do |r| %>
          <li>
            <%= r.description %> -- <%= humanized_money_with_symbol(r.cost) %>
          </li>
        <% end %>
      </ul>
    <% end %>
</div>

<div class="bg-blue-200 border border-blue-500 ">
    <% if @courses.present? %>
    <h4>Courses</h4>
      <ul>
        <% @courses.each do |c| %>
          <li>
            <%= c.title %>
          </li>
        <% end %>
      </ul>
    <% end %>
</div>

<% if admin_signed_in? %>
  <h4>Administrative area</h4>
    <strong>Notes:</strong>
    <%= @enrollment.notes %>


    <p>
      <strong>Application status:</strong>
      <%= @enrollment.application_status %>
    </p>

    <p>
      <strong>Offer status:</strong>
      <%= @enrollment.offer_status %>
    </p>

    <p>
      <strong>Partner program:</strong>
      <%= @enrollment.partner_program %>
    </p>
<% end %>

<%= link_to 'Edit', edit_enrollment_path(@enrollment) %>



